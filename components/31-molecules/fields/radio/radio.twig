<fieldset class="form-item">
  <legend>
    {{ label }}
    <span class="label-optional">({{ label_optional }})</span>
  </legend>
  <div class="form-columns">
    <div class="form-item-column">
      {% include '@field-description' with {
        "field_description": field_description
      } %}
    </div>
    <div class="form-item-column">

      {% include '@input-radio' with {
        'radio_label': label_radio1,
        'radio_name': radio1_name,
        'radio_id': radio1_id
      } %}

      {% include '@input-radio' with {
        'radio_label': label_radio2,
        'radio_name': radio2_name,
        'radio_id': radio2_id
      } %}

      {% if modifier == 'error' %}
        {% include '@field-message' with {
          "modifier": "error"
        } %}
      {% endif %}
      {% if modifier == 'success' %}
        {% include '@field-message' with {
          "modifier": "success"
        } %}
      {% endif %}

    </div>
  </div>
</fieldset>
