<div class="form-item">
  <div class="form-label">
    {% include '@label' with {
      "label": label,
      "label_optional": label_optional
    } %}
  </div>
  <div class="form-columns">
    <div class="form-item-column">
      {% include '@field-description' with {
        "field_description": field_description
      } %}
    </div>
    <div class="form-item-column">

      {% include '@input-checkbox' with {
        'label': label_checkbox1,
        'checkbox_name': checkbox1_name,
        'checkbox_id': checkbox1_id
      } %}
      {% include '@label' with {
        "label": checkbox1_label,
        "for": checkbox1_label_for,
        "label_optional": checkbox1_label_optional
      } %}

      {% include '@input-checkbox' with {
        'label': label_checkbox2,
        'checkbox_name': checkbox2_name,
        'checkbox_id': checkbox2_id
      } %}
      {% include '@label' with {
        "label": checkbox2_label,
        "for": checkbox2_label_for,
        "label_optional": checkbox2_label_optional
      } %}

      {% include '@description' with {
        "description": description
      } %}
      {% include '@field-error' with {
        "field_error": field_error
      } %}

    </div>
  </div>
</div>
