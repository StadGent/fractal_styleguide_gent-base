<div class="form-item{% if field_modifier %} {{ field_modifier }}{% endif %}">
  <div class="form-label">
    {% include '@label' with {
      "label": label,
      "for": for,
      "label_optional": label_optional
    } %}
  </div>
  <div class="form-columns">
    <div class="form-item-column">
      {% include '@field-description' with {
        "field_description": field_description
      } %}
    </div>
    <div class="form-item-column">
      {% include '@input-number'
        with {
          "number_name": number_name,
          "number_id": number_id
        }
      %}
      {% if modifier == 'error' %}
        {% include '@field-message' with {
          "modifier": "error"
        } %}
      {% endif %}
      {% if modifier == 'success' %}
        {% include '@field-message' with {
          "modifier": "success"
        } %}
      {% endif %}
    </div>
  </div>
</div>
