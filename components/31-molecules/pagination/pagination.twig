<nav class="pager" aria-labelledby="pagination_1">
  <h2 id="pagination_1" class="visually-hidden">Pagination</h2>
  <ul class="pager__items">
    <li>
      <a href="#" class="previous">
        <span class="visually-hidden">previous page</span>
        previous
      </a>
    </li>

    <li>
      <a href="#" title="Go to page {{ 1 }}"
        {% if 1 == active %}
        class="active"
        {% endif %}>
        <span class="visually-hidden">Page</span>
        {{ 1 }}
      </a>
    </li>
    {% if active > 3 %}
      <li>...</li>
    {% endif %}
    {% if active-1 > 1 and active-1 != total %}
      <li>
        <a href="#" title="Go to page {{ active-1 }}">
          <span class="visually-hidden">Page</span>
         {{ active-1 }}
        </a>
      </li>
    {% endif %}
    {% if active != 1 and active != total %}
      <li>
        <a href="#" title="Go to page {{ active }}"
          class="active">
          <span class="visually-hidden">Page</span>
          {{ active }}
        </a>
      </li>
    {% endif %}
    {% if active+1 < total %}
      <li>
        <a href="#" title="Go to page {{ active+1 }}">
          <span class="visually-hidden">Page</span>
          {{ active+1 }}
        </a>
      </li>
    {% endif %}
    {% if total - active > 3 %}
      <li>...</li>
    {% endif %}
    <li>
      <a href="#" title="Go to page {{ total }}"
        {% if total == active %}
        class="active"
        {% endif %}>
        <span class="visually-hidden">Page</span>
        {{ total }}
      </a>
    </li>
    <li>
      <a href="#" class="next">
        <span class="visually-hidden">next page</span>
        next
      </a>
  </ul>
</nav>
