<section id="{{ id }}" class="modal{{ modifier ? ' modal--' ~ modifier }}{{ classes ? ' ' ~ classes }}" tabindex="-1">
  <div class="modal-inner">
    <div class="modal-header">
      <button type="button" class="button close icon-cross modal-close" data-target="{{ id }}">
        <span>Close</span>
      </button>
    </div>
    <div class="modal-content">
      {{ content }}
    </div>
    {% if actions %}
      <div class="modal-actions">
        {{ actions }}
      </div>
    {% endif %}
  </div>
  <div class="modal-overlay modal-close" data-target="{{ id }}"></div>
</section>
