{% set describedBy = null %}
{% if field_description %}
  {% set describedBy = input_component ~ "-" ~ id ~ "-" ~ modifier ~ "description" %}
{% endif %}
{% if field_message %}
  {% set describedBy = input_component ~ "-" ~ id ~ "-" ~ modifier ~ "message" %}
{% endif %}

<div class="form-item {{ modifier }}">
  {% include '@label' with {
    "label": label,
    "for": input_component ~ "-" ~ id ~ "-" ~ modifier,
    "label_optional": label_optional
  } %}
  {% include '@field-message' with {
    "field_message": field_description,
    "modifier": null,
    "id": describedBy
  } %}
  <div class="form-columns">
    <div class="form-item-column">
      {% include '@'~input_component with {
        "id": input_component ~ "-" ~ id ~ "-" ~ modifier,
        "ariaDescribedBy": describedBy,
        "type": type
      }%}
    </div>
    <div class="form-item-column">
      {% if field_message %}
        {% include '@field-message' with {
          "modifier": modifier,
          "id": describedBy
        } %}
      {% endif %}
    </div>
  </div>
</div>
