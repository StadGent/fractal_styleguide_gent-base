<div class="crisis-communication-block box-left">
    <div class="inner-box">
        {% render '@heading' with {
            'type': 'h2',
            'heading_text': title
        } %}

        {% render '@readspeaker-button' %}

        {% render '@paragraph' with {
            'text': description
        } %}

        {% if list.length > 0 %}
            {% render '@list' with {
                'type': 'icon-list',
                'icon_items': list
            } %}
        {% endif %}

        {% if links.length > 0 %}
            {% render '@heading' with {
                'type': 'h3',
                'heading_text': title
            } %}

            {% render '@list'
                with {
                'type': 'unordered',
                "items": links
            } %}
        {% endif %}
    </div>
</div>
