<figure {% if modifier %} class="{{ modifier }}" {% endif %}>
  {% if subsite %}
    <div class="subsite">
      <div class="subsite-title">
        {% render '@image' with {
          'src': figure_logo_src_dark,
          'alt_text': figure_logo_alt_text,
          'modifier': 'dark',
          'ratio': false
        } %}
        {% render '@image' with {
          'src': figure_logo_src_light,
          'alt_text': figure_logo_alt_text,
          'modifier': 'light',
          'ratio': false
        } %}
        {% render '@heading' with {
          'type': 'h1',
          'heading_text': figure_title
        } %}
      </div>
    </div>
  {% endif %}
  {% render '@image' with {
    'src': figure_image_src,
    'alt_text': figure_image_alt_text,
    'ratio': figure_ratio
  } %}
  {% if figure_figcaption %}
    {% render '@figcaption' with {
      'figcaption': figure_figcaption
    } %}
  {% endif %}
</figure>
