<figure {% if modifier %} class="{{ modifier }}" {% endif %}>
  {% if subsite %}
    <div class="subsite">
      <picture>
        <source media="(min-width: 768px)" srcset="{{ figure_logo_src_light }}">
        <source srcset="{{ figure_logo_src_dark }}">
        <img src="{{ figure_logo_src_dark }}" alt="{{ figure_title }}">
      </picture>
      {% include '@heading' with {
        'type': 'h1',
        'heading_text': figure_title
      } %}
    </div>
  {% endif %}
  {% include '@image' with {
    'src': figure_image_src,
    'alt_text': figure_image_alt_text
  } %}
  {% if figure_figcaption %}
    {% include '@figcaption' with {
      'figcaption': figure_figcaption
    } %}
  {% endif %}
</figure>