<div class="collection teaser-topic-collection">
  {% include '@titles' with {
    "type": "collection-title",
    "heading_text": "Topics with images"
  } %}
  <ul>
    {% for i in 0..6 %}
      {% include '@teaser-topic' with {
        "teaser_paragraph_text": teaser_paragraph_text,
        "teaser_title": teaser_title,
        "teaser_uid":  teaser_uid ~ i,
        "teaser_link_text": teaser_link_text,
        "teaser_link_link": teaser_link_link,
        "teaser_image_src": teaser_image_src,
        "teaser_image_alt_text": teaser_image_alt_text
      } %}
    {% endfor %}
  </ul>
</div>
