<div class="image-gallery--wrapper single">
  <div class="image-gallery js-lightbox">
    <a href="{{ src }}"
      {% if caption %}
        aria-label="{{ caption }}"
      {% endif %}
       aria-labelledby="image-gallery__open-gallery"
       class="gallery-link">
      {% include '@figure' with {
        "figure_figcaption": caption,
        "figure_image_src": src,
        "figure_image_alt_text": alt,
        "figure_ratio": '8:5',
      } %}
    </a>
  </div>
</div>
