<div class="image-gallery--wrapper multiple">
  <ul class="image-gallery js-lightbox">
    {% for item in items %}
      <li>
        <a href="{{ item.src }}" class="gallery-link"
          {% if item.caption %}
            aria-label="{{ item.caption }}"
          {% endif %}
           aria-describedby="image-gallery__open-gallery">
          {% include '@figure' with {
            "figure_figcaption": item.caption,
            "figure_image_src": item.src,
            "figure_image_alt_text": item.alt,
            "figure_ratio": '8:5'
          } %}
        </a>
      </li>
    {% endfor %}
    <li class="image-gallery__show-more">
      <div class="show-more__content">
        <span class="show-more__total">{{ items.length }}</span>
        <span>Show all photos <i class="icon-arrow-right" aria-hidden="true"></i></span>
      </div>
    </li>
  </ul>
</div>

