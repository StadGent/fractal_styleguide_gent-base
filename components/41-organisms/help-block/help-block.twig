    {% render '@paragraph' with {
      'text': 'This can be done in several ways:',
    } %}
    {% render '@list' with {
      'type': 'icon-list',
      'icon_items': [
        '<i class="icon-home" aria-hidden="true"></i><span>Return to the <a href="javascript:(void);" alt="Homepage">homepage</a></span>',
