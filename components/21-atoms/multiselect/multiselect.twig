<select name="{{ name }}"
        id="{{ id }}"
        multiple="multiple"
        {% if modifier %}
          class="{{ modifier }}"
        {% endif %}
        {% if disabled %}
          disabled="disabled"
        {% endif %}
        {% if ariaDescribedBy %}
            aria-describedby="{{ ariaDescribedBy }}"
        {% endif %}
>
{% for option in options %}

  {% if option.optgroup %}
    <optgroup label="{{ option.label }}">
      {% for opt in option.optgroupoptions %}
        <option>{{ opt.label }}</option>
      {% endfor %}
    </optgroup>

  {% else %}
    <option>{{ option.label }}</option>
  {% endif %}

{% endfor %}
</select>
