<a
   {% if rel %}
     rel="{{ rel }}"
   {% endif %}
   href='{{ link }}'
   {% if modifier %}
     class="{{ modifier }}"
   {% endif %}
   {% if aria_label %}
       aria-label="{{ aria_label }}"
   {% endif %}
  {% if download %}
      download
  {% endif %}
   {% if aria_labelledby %}
       aria-labelledby="{{ aria_labelledby }}"
   {% endif %}
   title="{{ title }}">
  {% spaceless %}
      {{ text }}
  {% endspaceless %}
</a>
